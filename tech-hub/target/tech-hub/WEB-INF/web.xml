<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>ExampleServlet</servlet-name>
    <servlet-class>it.zucchetti.packages.servlets.ExampleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExampleServlet</servlet-name>
    <url-pattern>/servlets/ExampleServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ExampleServlet2</servlet-name>
    <servlet-class>it.zucchetti.packages.servlets.ExampleServlet2</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExampleServlet2</servlet-name>
    <url-pattern>/servlets/ExampleServlet2</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>db.url</param-name>
    <param-value>jdbc:sqlserver://localhost:1433;databaseName=AdventureWorks;encrypted=true;trustServerCertificate=true;</param-value>
  </context-param>

  <context-param>
    <param-name>db.username</param-name>
    <param-value>TechHub</param-value>
  </context-param>

  <context-param>
    <param-name>db.password</param-name>
    <param-value>Segretone123</param-value>
  </context-param>
</web-app>